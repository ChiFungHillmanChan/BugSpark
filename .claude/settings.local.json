{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(file:*)",
      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(python3:*)",
      "Bash(git worktree:*)",
      "Skill(code-reviewer)",
      "Skill(eslint-fixer)",
      "Skill(superpowers:brainstorming)",
      "WebSearch",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(chmod:*)",
      "Bash(git add:*)",
      "Bash(git clone:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cat | .claude/hooks/protected-files.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cat | .claude/hooks/task-notify.sh"
          },
          {
            "type": "command",
            "command": "cat | .claude/hooks/test-runner.sh"
          },
          {
            "type": "command",
            "command": "cat | .claude/hooks/auto-format.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"systemMessage\": \"Reminder: If you corrected any mistakes or learned new patterns during this session, update .claude/CLAUDE.md with the lesson.\"}'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude needs your attention\" with title \"Claude Code\"'"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "superpowers@superpowers-marketplace": true
  }
}
